---
import BaseLayout from "@components/base/BaseLayout.astro";
import SEO from "@components/common/SEO.astro";
---
<BaseLayout title="Bark Quiz">
  <SEO title="Bark Quiz" description="Take the Bark Quiz and discover your inner bear!" />
  <h1 style="color: #2d3a3a; font-family: 'Cormorant', serif;">Bark Quiz</h1>
  <p style="margin-bottom: 1.5rem; color: #4b5c5c;">Take the Bark Quiz and discover your inner bear! Powered by Arktos Health.</p>
  <iframe src="https://www.barkquiz.com/" width="100%" height="600" style="border:2px solid #bfa76f; border-radius: 12px; background: #fff; margin-bottom: 2rem;" title="Bark Quiz"></iframe>
  
     <!-- Bear Face Logo Section -->
   <div style="text-align: center; margin-top: 2rem;">
     <img 
       src="/src/icon0.svg" 
       alt="Arktos Health bear face logo" 
       width="80" 
       height="80" 
       style="border-radius: 50%; box-shadow: 0 2px 8px #bfa76f33;" 
     />
   </div>
</BaseLayout>
